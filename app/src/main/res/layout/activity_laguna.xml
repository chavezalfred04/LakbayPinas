<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Laguna"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/laguna"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LAGUNA"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="For those who want to experience simple country living, Laguna is a good day trip getaway from Manila. Laguna hugs the southern shores of Laguna de Bay, the largest lake in the country. You can go rafting or have picnics by lakes, hike to waterfalls, spend the day at farms, stay in cozy bed and breakfasts, dine in artistic and heritage restaurants or visit artist’s studios. Laguna is also notable for being the birthplace of Jose Rizal, the country’s national hero. "
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="•	Capital: Santa Cruz"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="•	Top tourist spots: Laguna Lake, Caliraya Lake, Pagsanjan Falls, Hot Spring Resorts in Los Banos, Seven Lakes of San Pablo, Mt. Makiling, Paete, Nagcarlan Underground Cemetery"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="•	Unique eats: Buko Pie, espasol (rice pudding), bibingka, kesong puti, puto Binan, kinulob na itik"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="•	Memorable travel highlights: Camping out beside Caliraya Lake; various motorcycle trips"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>