<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Iloilo"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/iloilo"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ILOILO"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Iloilo occupies a major southeast portion of the Visayan Island of Panay. As a leading province during the Spanish Colonial Era, the province is widely known for its beautiful old world architecture similar to that of Latin American Countries. It’s home to the UNESCO World Heritage Miag-ao Church."
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="•	Capital: Iloilo City"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="•	Top tourist spots: Miag-ao Church, Molo Church, Calle Real Heritage District, Iloilo River Esplanade, Garin Farm, Islas de Gigantes"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="•	Unique eats: KBL (Kadios, Baboy at Langka), Lapaz Batchoy, native lechon manok, fresh oysters, baked oysters with cheese, Pancit Molo, Tsokolate Batirol, Chicken Binakol"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="•	Memorable travel highlights: Getting sick from eating too many oysters and fresh seafood that I over-ordered during a solo trip"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>