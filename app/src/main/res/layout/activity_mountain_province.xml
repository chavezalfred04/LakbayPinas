<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MountainProvince"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/mountainprovince"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MOUNTAIN PROVINCE"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Situated within the central Cordillera region mountain range in the upper highalnds of Luzon island, Mountain Province or (Mt. Province) is known for its mummy caves, which contain naturally mummified bodies, hanging coffins, and ecotourism attractions including rivers, waterfalls, mountains, and caves."
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="•	Capital: Bontoc"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="•	Top tourist spots: Sagada, Sumaguing Cave, Bomod-ok Falls, Kiltepan Peak, Lumiang Cave, Mummy Caves, Hanging Coffins fo Sagada, Lake Danum, Maligcong Rice Terraces"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="•	Unique eats: Etag (salted pork), Pinikpikan, Sagada oranges, pinit (local berries), homemade yogurt"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="•	Memorable travel highlight: Drinking craft beer at Sagada Cellar Door, a brewery in the middle of a pine tree forest, after driving a motorcycle from Quezon City to Sagada"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>